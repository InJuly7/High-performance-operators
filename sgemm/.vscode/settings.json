{
    "files.associations": {
        "*.cu": "cuda-cpp",
        "random": "cpp",
        "array": "cpp",
        "deque": "cpp",
        "string": "cpp",
        "unordered_map": "cpp",
        "vector": "cpp",
        "iterator": "cpp",
        "string_view": "cpp",
        "__bit_reference": "cpp",
        "__hash_table": "cpp",
        "__split_buffer": "cpp",
        "memory": "cpp"
    },
    
    "C_Cpp.errorSquiggles": "disabled",
    
    "[cuda-cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.wordWrapColumn": 150,
        "editor.rulers": [150]
    },
    
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.wordWrapColumn": 150,
        "editor.rulers": [150]
    },
    
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.wordWrapColumn": 150,
        "editor.rulers": [150]
    }
}